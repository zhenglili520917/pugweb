//- mixin 區塊
//- 產生標題(英文標題,中文標題)
mixin title(eng,chin)
    div(class="title-box")
        h2(class="title")=eng
        h1(class="eng")=chin
        img(src="imgs/line.png", alt="線條")

//- 產生產品區塊(圖片,產品標題,產品說明)
mixin product-box(img, tit2, text)
    div(class="product-box")
        a(href="#")
            img(src="imgs/" + img + ".png", alt="產品 照片")
            hr
            h2=tit2
            P=text 


